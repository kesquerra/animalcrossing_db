          <label data-error="wrong" data-success="right" for="orangeForm-name" class="modal-text">Birthday</label><br>
          <label data-error="wrong" data-success="right" for="orangeForm-name" class="modal-text">Hobby</label>
          <select id="hobby">
            <option value="nature">Nature</option>
            <option value="fitness">Fitness</option>
          </select><br>
          <label data-error="wrong" data-success="right" for="orangeForm-name" class="modal-text">Species</label>
          <select id="species">
            <option value="nature">Bird</option>
          </select><br>
          <label data-error="wrong" data-success="right" for="orangeForm-name" class="modal-text">Personality</label>
          <select id="personality">
            <option value="nature">Cranky</option>
            <option value="nature">Peppy</option>
          </select><br>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <a href="/villager/all" class="modal-text">Submit</a>
      </div>
    </div>
  </div>
</div>

