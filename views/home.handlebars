<!-- Island Modal-->
<div class="modal fade" id="island-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-text">Create An Island</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="md-form mb-5">
          <i class="fas fa-user prefix black-text"></i>
          <input type="text" class="form-control validate">
          <label data-error="wrong" data-success="right" for="orangeForm-name" class="modal-text">Island Name</label>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <a href="/island/all" class="modal-text">Submit</a>
      </div>
    </div>
  </div>
</div>

<!-- Villager Modal-->
<div class="modal fade" id="villager-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
