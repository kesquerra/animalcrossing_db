<!--Delete Modal-->

<div class="modal fade" id="delete-modal-{{this}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-text text-capitalize">Delete {{@root.entity.table_name}}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
      </div>
      <label>Are you sure you want to delete this record?</label>
      <form action="/{{@root.entity.table_name}}/delete" id="form2" method="POST">
      <input hidden name="table" value="{{@root.entity.table_name}}">
      <input hidden name="id" value="{{this}}">
      <input type="submit" id="submit2" value="Confirm">
      </form>
    </div>
  </div>
</div>

