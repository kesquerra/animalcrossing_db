<!--Searchbar-->

<div class="searchbar">
    <div class="input-search">
        <form class="form-inline" action="/search" method="POST">
        <i class="fas fa-search"></i>
        <input class="form-control form-control-md mr-3 w-75" name="value" type="text" placeholder="Search" aria-label="Search">
    </div>
    <div class="form-group">
    <input name="table" value="{{table_name}}" type="hidden">
    <select name= "field" class="form-control" id="sel1">
        {{#each column_name}}
            <option value="{{this.COLUMN_NAME}}">{{this.COLUMN_NAME}}</option>
        {{/each}}
    </select>
    </form>
    </div>
</div>