{{>searchbar}}

<div class="record-table">
    <table class="table table-striped">
        <thead>
            <tr>
                {{#each column_name}}
                    <th>{{this.COLUMN_NAME}}</th>
                {{/each}}
                    <th>update</th>
                    <th>delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each record}}
                <tr>
                    {{#each ../column_name}}
                        <td>{{lookup .. this.COLUMN_NAME}}</td>
                    {{/each}}
                    <td><button>Update</button></td>
                    <td><button>Delete</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
