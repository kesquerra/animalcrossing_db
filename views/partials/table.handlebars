{{>searchbar}}

<div class="record-table">
    <table class="table table-striped">
        <thead>
            <tr>
                {{#each this.column_name}}
                    <th>{{this.COLUMN_NAME}}</th>
                {{/each}}
                    <th>update</th>
                    <th>delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.record}}
                <tr>
                    {{#each ../column_name}}
                        <td>{{lookup .. this.COLUMN_NAME}}</td>
                    {{/each}}
                    <td><div class="button1"><a class="btn btn-light btn-sm" data-toggle="modal" data-target="#update-modal">Update</a></div></td>
                    <td><div class="button1"><a class="btn btn-light btn-sm" data-toggle="modal" data-target="#delete-modal-{{lookup . ../column_name.0.COLUMN_NAME}}">Delete</a></div></td>
                </tr>
                {{> delete-modal (lookup . ../column_name.0.COLUMN_NAME)}}
            {{/each}}
        </tbody>
    </table>
    {{> update-modal}}
    
</div>
