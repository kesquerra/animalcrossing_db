{{>searchbar}}

<div class="record-table">
    <table class="table table-striped" id="{{this.table_name}}">
        <thead>
            <tr>
                {{#each this.column_name}}
                    <th>{{this.COLUMN_NAME}}</th>
                {{/each}}
                    <th>update</th>
                    <th>delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.record}}
                <tr>
                    {{#each ../column_name}}
                        <td>{{lookup .. this.COLUMN_NAME}}</td>
                    {{/each}}
                    <td><div class="button2"><a class="btn btn-light btn-sm">Update</a></div></td>
                    <td><div class="button3"><a class="btn btn-light btn-sm">Delete</a></div></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{>update-modal}}
</div>
