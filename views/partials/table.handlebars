<table class="table table-striped">
    <thead>
        <tr>
            {{#each column_name}}
                <th>{{this}}</th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each record}}
            <tr>
                {{#each ../column_name}}
                    <td>{{lookup .. this}}</td>
                {{/each}}
                <td><div class="button1"><a href="/facility" class="btn btn-light btn-sm" data-toggle="modal" data-target="#update-modal">Update</a></div></td>
                <td><div class="button1"><a href="/facility" class="btn btn-light btn-sm">Delete</a></div></td>
            </tr>
        {{/each}}
        {{>update-modal}}
    </tbody>
</table>